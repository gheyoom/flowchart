@page
@model FlowChartApp.Pages.Admin.EditModel

<h1>Edit FlowBox</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FlowBox.Id" />
            
            <div class="card mb-3">
                <div class="card-header">Basic Info</div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="FlowBox.Name" class="control-label"></label>
                        <input asp-for="FlowBox.Name" class="form-control" />
                        <span asp-validation-for="FlowBox.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="FlowBox.OrderIndex" class="control-label"></label>
                        <input asp-for="FlowBox.OrderIndex" class="form-control" />
                        <span asp-validation-for="FlowBox.OrderIndex" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">Links</div>
                <div class="card-body">
                    <div class="row">
                       <div class="col-md-4">
                             <div class="form-group mb-2">
                                <label asp-for="FlowBox.LinkLeftText" class="control-label">Left Text</label>
                                <input asp-for="FlowBox.LinkLeftText" class="form-control" />
                            </div>
                            <div class="form-group mb-2">
                                <label asp-for="FlowBox.LinkLeftUrl" class="control-label">Left URL</label>
                                <input asp-for="FlowBox.LinkLeftUrl" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4">
                             <div class="form-group mb-2">
                                <label asp-for="FlowBox.LinkMiddleText" class="control-label">Middle Text</label>
                                <input asp-for="FlowBox.LinkMiddleText" class="form-control" />
                            </div>
                            <div class="form-group mb-2">
                                <label asp-for="FlowBox.LinkMiddleUrl" class="control-label">Middle URL</label>
                                <input asp-for="FlowBox.LinkMiddleUrl" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4">
                             <div class="form-group mb-2">
                                <label asp-for="FlowBox.LinkRightText" class="control-label">Right Text</label>
                                <input asp-for="FlowBox.LinkRightText" class="form-control" />
                            </div>
                            <div class="form-group mb-2">
                                <label asp-for="FlowBox.LinkRightUrl" class="control-label">Right URL</label>
                                <input asp-for="FlowBox.LinkRightUrl" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                <a asp-page="./Visual" class="btn btn-info ms-2">Open in Visual Editor</a>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">Connections</div>
            <div class="card-body">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Target</th>
                            <th>Type</th>
                            <th>Color</th>
                            <th>Dir</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var conn in Model.FlowBox.OutgoingConnections)
                        {
                            <tr>
                                <td>@conn.TargetBox?.Name</td>
                                <td>@conn.ConnectionType</td>
                                <td>@conn.Color</td>
                                <td>@conn.Direction</td>
                                <td>
                                    <form method="post" asp-page-handler="DeleteConnection" asp-route-connectionId="@conn.Id" asp-route-id="@Model.FlowBox.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-danger">X</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                
                <hr />
                <h5>Add Connection</h5>
                <form method="post" asp-page-handler="AddConnection">
                    <input type="hidden" asp-for="FlowBox.Id" />
                    
                    <div class="mb-2">
                        <label>Target Box</label>
                        <select asp-for="NewConnection.TargetBoxId" asp-items="Model.BoxList" class="form-select"></select>
                    </div>
                    
                    <div class="row">
                        <div class="col-4 mb-2">
                            <label>Style</label>
                            <select asp-for="NewConnection.ConnectionType" class="form-select">
                                <option value="solid">Solid</option>
                                <option value="dotted">Dotted</option>
                                <option value="dashed">Dashed</option>
                            </select>
                        </div>
                        <div class="col-4 mb-2">
                            <label>Direction</label>
                            <select asp-for="NewConnection.Direction" class="form-select">
                                <option value="right">Right</option>
                                <option value="left">Left</option>
                                <option value="top">Top</option>
                                <option value="bottom">Bottom</option>
                            </select>
                        </div>
                        <div class="col-4 mb-2">
                            <label>Color</label>
                            <select asp-for="NewConnection.Color" class="form-select">
                                <option value="black">Black</option>
                                <option value="red">Red</option>
                                <option value="blue">Blue</option>
                                <option value="green">Green</option>
                            </select>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-success btn-sm">Add Connection</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
