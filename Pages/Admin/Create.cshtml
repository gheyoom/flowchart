@page
@model FlowChartApp.Pages.Admin.CreateModel

<h1>Create FlowBox</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="FlowBox.Name" class="control-label"></label>
                <input asp-for="FlowBox.Name" class="form-control" />
                <span asp-validation-for="FlowBox.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FlowBox.OrderIndex" class="control-label"></label>
                <input asp-for="FlowBox.OrderIndex" class="form-control" />
                <span asp-validation-for="FlowBox.OrderIndex" class="text-danger"></span>
            </div>
            
            <h4>Links</h4>
            <div class="row">
                <div class="col-md-4">
                     <div class="form-group mb-2">
                        <label asp-for="FlowBox.LinkLeftText" class="control-label">Left Text</label>
                        <input asp-for="FlowBox.LinkLeftText" class="form-control" />
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="FlowBox.LinkLeftUrl" class="control-label">Left URL</label>
                        <input asp-for="FlowBox.LinkLeftUrl" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4">
                     <div class="form-group mb-2">
                        <label asp-for="FlowBox.LinkMiddleText" class="control-label">Middle Text</label>
                        <input asp-for="FlowBox.LinkMiddleText" class="form-control" />
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="FlowBox.LinkMiddleUrl" class="control-label">Middle URL</label>
                        <input asp-for="FlowBox.LinkMiddleUrl" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4">
                     <div class="form-group mb-2">
                        <label asp-for="FlowBox.LinkRightText" class="control-label">Right Text</label>
                        <input asp-for="FlowBox.LinkRightText" class="form-control" />
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="FlowBox.LinkRightUrl" class="control-label">Right URL</label>
                        <input asp-for="FlowBox.LinkRightUrl" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
