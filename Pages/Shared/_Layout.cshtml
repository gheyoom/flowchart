@using FlowChartApp.Data
@inject AppDbContext DbContext
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlowChart Pro</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FlowChartApp.styles.css" asp-append-version="true" />
    
    <!-- Pro Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;500;700&display=swap" rel="stylesheet">
    
    <style>
        /* Pro Navbar Styles */
        body {
            font-family: 'Outfit', sans-serif;
            padding-top: 80px;
        }
        
        .pro-navbar {
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
            padding: 0.8rem 1rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: #fff !important;
            letter-spacing: -0.5px;
        }
        
        .navbar-brand i {
            color: #3b82f6; /* Accent blue */
        }

        .nav-link {
            color: rgba(255,255,255,0.7) !important;
            font-weight: 500;
            transition: all 0.2s ease;
            border-radius: 6px;
            padding: 0.5rem 1rem !important;
            margin: 0 0.2rem;
        }

        .nav-link:hover, .nav-link.active {
            color: #fff !important;
            background: rgba(255,255,255,0.1);
            transform: translateY(-1px);
        }

        .nav-link i {
            margin-right: 6px;
            opacity: 0.8;
        }
        
        /* Footer Pro */
        footer.footer {
            background: #f8fafc;
            border-top: 1px solid #e2e8f0;
            font-size: 0.9rem;
            position: relative !important; /* Force flow positioning */
            width: 100%;
            z-index: 100;
        }

        /* Fix body height/layout */
        body {
            font-family: 'Outfit', sans-serif;
            padding-top: 80px;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        
        /* Remove the spacer if it existed in site.css context */
        body {
            margin-bottom: 0 !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark pro-navbar mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="bi bi-diagram-3-fill"></i>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        @{
                            var lastUpdate = DbContext.AppMetadata.Find("LastUpdated")?.Value;
                        }
                        @if (!string.IsNullOrEmpty(lastUpdate))
                        {
                            <li class="nav-item d-flex align-items-center">
                                <span class="nav-link text-white small" style="pointer-events: none; opacity: 0.9;">
                                    <i class="bi bi-clock-history text-warning"></i> Updated: @lastUpdate
                                </span>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link dropdown-toggle" href="#" id="navbarAdminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear-fill text-warning"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark border-0 shadow-lg mt-2" aria-labelledby="navbarAdminDropdown" style="background: #1e293b; border-radius: 12px; padding: 0.5rem; min-width: 200px;">
                                    <li>
                                        <a class="dropdown-item py-2 px-3 rounded-3 mb-1" asp-area="" asp-page="/Admin/Index" style="font-weight: 500; transition: all 0.2s;">
                                            <i class="bi bi-speedometer2 me-2 text-primary"></i> Dashboard
                                        </a>
                                    </li>
                                     <li>
                                        <a class="dropdown-item py-2 px-3 rounded-3" asp-area="" asp-page="/Admin/Visual" style="font-weight: 500; transition: all 0.2s;">
                                            <i class="bi bi-palette me-2 text-info"></i> Visual Editor
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider border-secondary opacity-25"></li>
                                   
                                    <li>
                                        <!-- Logout Form -->
                                        <form method="post" asp-page="/Login" asp-page-handler="Logout" class="d-inline">
                                             <button type="submit" class="dropdown-item py-2 px-3 rounded-3 text-danger" style="font-weight: 500;">
                                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            }
                            else
                            {
                                <a class="nav-link" asp-area="" asp-page="/Login">
                                    <i class="bi bi-lock"></i> Admin Login
                                </a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3 mt-auto">
        <div class="container text-center">
            &copy; 2026 - <strong>FlowChartPro</strong> - Designed with <i class="bi bi-heart-fill text-danger"></i>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
